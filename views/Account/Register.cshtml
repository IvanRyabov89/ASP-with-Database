@model ASP_с_бд.AuthTelephoneDescriptionApp.UserRegistration
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>

            <form asp-action="Register" asp-antiforgety="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <input asp-for="Password" class="form-control" placeholder="Пароль" />
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" ckass="form-control" placeholder="Продублируйте пароль"/>
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    </div>
</div>
